<body style="background-image: url('@Model.BackgroundImgUrl');background-size: cover; background-repeat: no-repeat;">
    <div class="slot-machine">
        <input id="CreatedBy" hidden value="@Model.CreatedBy" />
        <input id="luckyDrawId" hidden value="@Model.Id" />
        <input id="luckyDrawPrizeId" hidden value="@Model.LuckyDrawPrizes[0].Id" />
        <h1 style="color:white">@Model.Name</h1>
        <h1 style="color:white">@Model.LuckyDrawPrizes[0].Name : @Model.LuckyDrawPrizes[0].Quantity.ToString("D2") @Model.LuckyDrawPrizes[0].Value</h1>
        <div class="contain_img ">
            <img src="@Model.LuckyDrawPrizes[0].ImgUri" alt="Alternate Text" />
        </div>
        <div class="group">
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
            <div class="reel"></div>
        </div>

        <h2 class="js-announcement announcement"></h2>
        <h2 id="agentId" class="js-announcement announcement" style="color:red"></h2>
        <button class="lever button">
            Start
        </button>
    </div>
    <div class="contain-DS">
        <div class="DS">
            <ol>
                @if (Model.LuckyDrawResults != null)
                {
                    if (Model.LuckyDrawResults.Count > 0)
                    {
                        for (int i = 0; i < Model.LuckyDrawResults.Count; i++)
                        {
                            @if (Model.LuckyDrawResults[i].luckyDrawPrizeId == Model.LuckyDrawPrizes[0].Id)
                            {
                                <li>
                                    <span>@Model.LuckyDrawResults[i].DrawData</span> - <span>@Model.LuckyDrawResults[i].AgentId</span>
                                </li>
                            }
                        }
                    }
                }
            </ol>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/LuckyRaw.js"></script>

</body>

